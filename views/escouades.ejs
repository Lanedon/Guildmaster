<!DOCTYPE html>

<html>
    <head>
        <% include ./styles.ejs %>
      	<% include ./scripts.ejs %>
        <title>escouades</title>

     <% include ./header.ejs %>
        <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <h3 class="a-color"><div class="icone icone-inline">&#xf0c0</div><a class="a-color"href="/guildmaster/escouades/creer">Cr√©er une escouade</a></h3>
                    </div>
                </div>
                <div class="row" style="margin-top: 50px">
                        <div class="col-sm-10 col-sm-offset-1">
                                <div class="table-responsive">
                                    <table class="table table-condensed table-stripped table-hover">
                                            <tr class="thead">
                                      <th>nom</th>
                                      <th>detail</th>
                                      <th>supprimer</th>
                                    </tr>
                                    <% if(data.length){ 
                                    for(var i = 0;i < data.length;i++) { %>
                                    <tr class="tbody text-center">
                                     <td><%=data[i].name%></td>
                                     <td><a href="/guildmaster/escouades/detail/<%=data[i].idSquad%>/<%=data[i].name%>">detail</a></td>
                                     <td><a onclick="verifAction()" href="/guildmaster/escouades/supprimer/<%=data[i].idSquad%>/<%=data[i].name%>">supprimer</a></td>
                                     </tr>
                                    <% }
                                    } %>
                                    </table>
                               </div>
                        </div>
                </div>
            </div> 
    </body>
</html>
