<!DOCTYPE html>

<html>
    <head>
        <title>cr√©ation d'une escouade</title>

     <% include ./header.ejs %>
        <div class="container-fluid">
                <div class="row">
                        <div class="col-sm-10 col-sm-offset-1">
                                <div class="table-responsive">
                                    <form action="/guildmaster/escouades/creer/validation" method="post">
                                <div class="col-sm-12 input-popup">
                                    <label for="pseudo">nom de l'escouade :</label>
                                    <input type="text" name="name" id="name" class="form-control" required autofocus >
                                </div>
				<div class="col-sm-12 input-popup">
                                    <label for="membres">membres :</label>
		        	  
				    <table class="table table-condensed table-stripped table-hover">
					    <tr class="thead">
					      <th>ajouter</th>
					      <th>classe</th>
					      <th>prestige</th>
					      <th>force</th>
					      <th>dexterite</th>
					      <th>intelligence</th>
					      <th>chance</th>
					      <th>endurence</th>
					    </tr>
					    <% if(data.length){ 
					    for(var i = 0;i < data.length;i++) { %>
					    <tr class="tbody text-center">
					     <td><input type="checkbox" name="membres" id="membres" value="<%=data[i].idCrew%>" class="form-control"></td>
					     <td><%=data[i].classe%></td>
					     <td><%=data[i].prestige%></td>
					     <td><%=data[i].str%></td>
					     <td><%=data[i].dex%></td>
					     <td><%=data[i].intel%></td>
					     <td><%=data[i].luk%></td>
					     <td><%=data[i].end%></td>
					    </tr>
					    <% }
					    } %>
                                    </table>
                                </div>
				<div class="col-sm-12 text-center btn-popup">
                                    <button class="btn btn-lg btn-default" type="submit" name="submit" id="submit">Confirmer</button>
                               </div>
                        </div>
                </div>
            </div> 
    </body>
</html>
