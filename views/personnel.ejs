<!DOCTYPE html>

<html>
    <head>
        <title>Personnel</title>
        <% include ./styles.ejs %>
      	<% include ./scripts.ejs %>
    </head>
    <body>
	<% include ./header.ejs %>
	<div class="container-fluid">
		<div class="row">
			
	    	
			<div class="col-sm-4 col-sm-offset-1 text-center">
				<h1 class="a-color"><div class="icone icone-inline">&#xf234</div><a class="a-color" href="/guildmaster/recruter">Recruter</a></h1>
			</div>
			<div class="col-sm-4 col-sm-offset-1 text-center">
				<h1 class="a-color"><div class="icone icone-inline">&#xf0c0 </div><a class="a-color" href="/guildmaster/escouades">Escouades</a></h1>
			</div>
		</div>
	    
	    <div class="row" style="margin-top: 50px;">
		    <div class="col-sm-10 col-sm-offset-1">
			    <div class="table-responsive">
				<table class="table table-condensed table-stripped table-hover">
				  <tr class="thead">
				    <th>nom</th>
				    <th>niveau</th>
				    <th>talent</th>
				    <th>job</th>
				    <th>detail</th>
				    <th>supprimer</th>  
				  </tr>
				  <% if(data.length){ 
				  for(var i = 0;i < data.length;i++) { %>
				  <tr class="tbody text-center">
				   <td><%=data[i].name%> <%=data[i].surname%></td>
				   <% if (data[i].niveau) { %>
				     <td><%=data[i].niveau%></td>
				   <% } else { %>
				     <td></td>
				   <%}%>
				   <td><%=data[i].talent%></td>
				   <td><%=data[i].job%></td>
				   <% if(data[i].hero == 1){ %>
				   <td><a href="/guildmaster/personnel/detail/<%=data[i].idCrew%>/<%=data[i].name%>/<%=data[i].surname%>">detail</a></td>
				   <% } else{ %>
				   <td></td>
				   <% } %>
				   <td><a onclick="verifAction()" href="/guildmaster/personnel/supprimer/<%=data[i].idCrew%>/<%=data[i].name%>/<%=data[i].surname%>">supprimer</a></td>
				  </tr>
				  <% }
				  } %>
				  </table>
			   </div>
		    </div>
	    </div>
	</div>
    </body>
</html>
