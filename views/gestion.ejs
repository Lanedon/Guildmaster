<!DOCTYPE html>
<html>
<% if(role['role']=='admin'){ %>
    <head>
        <title>Gestion</title>
        <style>
            a {text-decoration: none; color: black;}
        </style>

    <% include ./header.ejs %>
 <div class="container-fluid">
     	<div class="row">
     		<div class="col-sm-10 col-sm-offset-1">
     			<div class="panel panel-default" id="panelAccueil">
			    <div class="panel-body">
				<table>
					 <tr>
					  <th width="50px">id</th>
					  <th>pseudo</th>
					  <th>guilde</th>
					  <th>adresse email</th>
					  <th>role</th>
					  <th>rang</th>
					  <th>prestige</th>
					  <th>or</th>
					  <th>modifier</th>
					  <th>bannir</th>
					  <th>supprimer</th>
					</tr>
					<% if(data.length){
					for(var i = 0;i < data.length;i++) { %>
					<tr>
					 <td><%=data[i].idUser%></td>
					 <td><%=data[i].login%></td>
					 <td><%=data[i].name%></td>
					 <td><%=data[i].email%></td>
					 <td><%=data[i].role%></td>
					 <td><%=data[i].rank%></td>
					 <td><%=data[i].prestige%></td>
					 <td><%=data[i].gold%></td>
					 <td><a href="/guildmaster/gestion/modifier<%=data[i].idUser%>">modifier</a></td>
					 <td><a href="/guildmaster/gestion/bannir<%=data[i].idUser%>">bannir</a></td>
					 <% if(data[i].role!='admin'){ %>
					 <td><a href="/guildmaster/gestion/supprimer<%=data[i].idUser%>">supprimer</a></td>
					 <% } %>
					</tr>
					 <% } } %>
					 
				</table>
				
			    </div>
		     </div>
	      </div>
      </div>
 </div>	
    </body>
<%  } else{ %>
<meta http-equiv="refresh" content="0; url=/guildmaster" />
<%  } %>
</html>
